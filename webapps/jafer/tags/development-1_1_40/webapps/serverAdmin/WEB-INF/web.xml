<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>JAFER ZServer Admin</display-name>
  <description>JAFER ZServer Admin Servlet</description>
  <listener>
    <listener-class>org.jafer.zserver.util.ContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <display-name>AdminServlet</display-name>
    <description>JAFER ZServer AdminServlet</description>
    <servlet-class>org.jafer.zserver.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/AdminServlet</url-pattern>
  </servlet-mapping>
</web-app>

