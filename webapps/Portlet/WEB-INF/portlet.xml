<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
  <portlet>
    <description>JAFER Search Portlet</description>
    <portlet-name>SearchPortlet</portlet-name>
    <display-name>JAFER Search Portlet</display-name>
    <portlet-class>org.jafer.portlets.XsltSearchPortlet</portlet-class>
    <init-param>
      <name>target.Hull University</name>
      <value>z3950s://library.hull.ac.uk:210/INNOPAC</value>
    </init-param>
    <init-param>
      <name>target.Oxford University</name>
      <value>z3950s://olis.ox.ac.uk:210/ADVANCE</value>
    </init-param>
    <init-param>
      <name>target.DSpace</name>
      <value>http://repository.ust.hk/SRW/search/DSpace</value>
    </init-param>
<!--
    <init-param>
      <name>target.Amstoria</name>
      <value>http://203.200.1.75/AMSTOIASRWServices/srwService.asmx</value>
    </init-param>
-->
    <init-param>
      <name>recordSchema</name>
      <value>http://www.loc.gov/mods/</value>
    </init-param>

    <init-param>
      <name>search</name>
      <value>/properties/search.xsl</value>
    </init-param>
    <init-param>
      <name>list</name>
      <value>/properties/list.xsl</value>
    </init-param>
    <init-param>
      <name>item</name>
      <value>/properties/item.xsl</value>
    </init-param>

    <expiration-cache>-1</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
    </supports>

    <supported-locale>en</supported-locale>

    <portlet-info>
      <title>JAFER Search Portlet</title>
      <short-title>Search</short-title>
      <keywords>JAFER, Search</keywords>
    </portlet-info>
  </portlet>
</portlet-app>

