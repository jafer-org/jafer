<project name="osid-sample" default="runsample" basedir=".">

	
  <property name="jaferclasses"  value="./build/classes" />

	<import file="./buildscripts/build_resources.xml"/>

	<target name="runsample" >
		<java classname="org.jafer.osid.consumer.SampleConsumer" fork="true">
			<classpath>
				<pathelement location="${jaferclasses}"/>
			</classpath>
		  <classpath refid="support.libs" />
		</java>
	</target>

	<target name="ziposidstuff">
		<delete file="jafer-osid-patch.zip" />
		<zip destfile="jafer-osid-patch.zip" update="false">
			<zipfileset dir="src">
				<include name="org/jafer/util/xml/DomUtils.java" />
				<include name="org/jafer/util/xml/DomUtilsException.java" />
				<include name="org/jafer/osid/**/*" />
			</zipfileset>
			<zipfileset dir="lib/osid" prefix="lib/" >
				<include name="osidapi-2.0.jar" />
			</zipfileset>
			<zipfileset dir="." >
				<include name="build-osid-sample.xml" />
			</zipfileset>
		</zip>
	</target>

</project>
